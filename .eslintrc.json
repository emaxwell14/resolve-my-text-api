{
    "env": {
        "node": true,
        "mocha": true
    },
    "extends": "airbnb-base",
    "plugins": [
        "prettier"
    ],
    "rules": {
        "no-use-before-define": [
            "error",
            {
                "functions": false,
                "classes": true
            }
        ],
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true
            }
        ]
    }
}